.SUFFIXES: .c .f .o

HYPRE_DIR = @HYPRE_TOP_SRC_DIR@

CC = @CC@
CXX = @CXX@
F77 = @F77@

C_COMPILE_FLAGS=@CFLAGS@
CXX_COMPILE_FLAGS=@CXXFLAGS@
F77_COMPILE_FLAGS=@F77FLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
CDEFS = @HYPREDEFS@ @HYPRE_PETSCDEFS@ -DHYPRE_TIMING -DHYPRE_NO_PTHREAD_MANGLING


CFLAGS = \
 @PETSCINCLUDE@ \
 ${C_COMPILE_FLAGS}\
 -I$(HYPRE_DIR)/utilities\
 -I$(HYPRE_DIR)\
 ${CINCLUDES}\
 ${CDEFS}

CXXFLAGS = \
 @PETSCINCLUDE@ \
 ${CXX_COMPILE_FLAGS}\
 -I$(HYPRE_DIR)/utilities\
 -I$(HYPRE_DIR)\
 ${CINCLUDES}\
 ${COPT}\
 ${CDEBUG}\
 ${CDEFS}

RANLIB = @RANLIB@


##################################################################
# Targets
##################################################################
clean:
	@rm -f *.o *.dxx 

veryclean: clean
	@rm -f lib*.a


##################################################################
# Generic rules
##################################################################


.c.o:
	${CC} -o $@ -c ${CFLAGS} $<

.cc.o:
	${CXX} -o $@ -c ${CFLAGS} $<

.f.o:
	${F77} -o $@ -c ${FFLAGS} $<
