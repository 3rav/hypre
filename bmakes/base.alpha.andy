 -L${HYPRE_DIR}/struct_linear_solvers_andy \
 -L${HYPRE_DIR}/struct_matrix_vector_andy\
 -L${HYPRE_DIR}/utilities\
 -lHYPRE_StructSolver \
 -lHYPREPETScSolverParILUT \
 -lHYPREPETScMatPilutSolver \
 -lHYPREDistributedMatrixPilutSolver \
 -lHYPRE_StructMatrix \
 -lHYPREDistributedMatrix \
 -lHYPRE_MatrixMatrix\
 -lHYPRE_memory\
 ${PETSC_LFLAGS}\
 ${ISIS_LFLAGS}\
 -lm\
 -lgs -lots -lfor /usr/local/gnu/lib/gcc-lib/alpha-dec-osf4.0/2.7.2.3/libgcc.a


.cc.o:
	@echo "Making (c++) " $@
	${CCC} -o $@ -c ${CFLAGS} $<

