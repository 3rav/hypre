CINCLUDES=@INCLUDES@

CFLAGS =\
 -I$(srcdir)\
 ${C_COMPILE_FLAGS}\
 ${CINCLUDES}

RANLIB= @RANLIB@

LIBFLAGS = @LIBDIRS@ @LIBS@
LDLIBFLAGS = @LDLIBDIRS@ @LDLIBS@

HEADERS =\
 f2c.h\
