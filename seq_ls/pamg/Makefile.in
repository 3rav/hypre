.SUFFIXES:
.SUFFIXES: .c .f .o

srcdir = @srcdir@
VPATH = @srcdir@
 
CC = @CC@

C_COMPILE_FLAGS=@CFLAGS@
CXX_COMPILE_FLAGS=@CXXFLAGS@
F77_COMPILE_FLAGS=@F77FLAGS@ 
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
CDEFS = @HYPREDEFS@ -DHYPRE_TIMING

CFLAGS =\
 ${C_COMPILE_FLAGS}\
 -I../../utilities\
 -I../../seq_matrix_vector\
 ${CINCLUDES}\
 ${CDEFS}
 
RANLIB= @RANLIB@
 
MPILIBFLAGS = @MPILIBDIRS@ @MPILIBS@ @MPIFLAGS@
LIBFLAGS = @LIBDIRS@ @LIBS@
LDLIBFLAGS = @LDLIBDIRS@ @LDLIBS@
 
LFLAGS =\
 -L.\
 -L../../seq_matrix_vector\
 -L../../utilities\
 -lHYPRE_ls\
 -lHYPRE_mv\
 -lHYPRE_utilities\
 ${MPILIBFLAGS} ${LIBFLAGS} ${LDLIBFLAGS}
 

HEADERS =\
 headers.h\
 amg.h\
 pcg.h\
 pamg.h\
 HYPRE_ls.h

FILES =\
 driver.c\
 amg.c\
 amgstats.c\
 amg_setup.c\
 amg_solve.c \
 coarsen.c\
 cycle.c\
 indepset.c\
 interp.c\
 laplace.c\
 laplace_9pt.c\
 laplace_27pt.c\
 random.c\
 rap.c \
 relax.c\
 transpose.c\
 HYPRE_amg.c

OBJS = ${FILES:.c=.o}




##################################################################
# Targets
##################################################################

all: libHYPRE_ls.a driver

install: all

clean:
	@rm -f *.o

veryclean: clean
	@rm -f driver
	@rm -f libHYPRE_ls.a

##################################################################
# Rules
##################################################################

driver: driver.o libHYPRE_ls.a
	@echo  "Linking" $@ "... "
	${CC} -o driver driver.o ${LFLAGS}

libHYPRE_ls.a: ${OBJS}
	@echo  "Building $@ ... "
	ar -rcu $@ ${OBJS}
	${RANLIB} $@

${OBJS}: ${HEADERS}

##################################################################
# Generic rules
##################################################################

.c.o:
	${CC} -o $@ -c ${CFLAGS} $<

