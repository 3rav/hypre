LFLAGS =\
 -L.\
 -L../../seq_mv\
 -L../../utilities\
 -lHYPRE_amg_ls\
 -lHYPRE_seq_mv\
 -lHYPRE_utilities\
 -L../../krylov -lHYPRE_krylov\
