##################################################################
# Targets
##################################################################

all: libHYPRE_amg_ls.a

install: all

clean:
	@rm -f *.o

veryclean: clean
	@rm -f libHYPRE_amg_ls.a Makefile

##################################################################
# Rules
##################################################################

libHYPRE_amg_ls.a: ${OBJS}
	@echo  "Building $@ ... "
	${AR} -rcu $@ ${OBJS}
	${RANLIB} $@

