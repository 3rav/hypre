SHELL = /bin/sh

srcdir = @srcdir@
VPATH = @srcdir@

# These are directories that are not yet officially in HYPRE
HYPRE_EXTRA_DIRS =\
 pilut

all: 
	@ \
	for i in ${HYPRE_EXTRA_DIRS}; \
	do \
	  if [ -d $$i ]; \
	  then \
	    echo "Making $$i ..."; \
	    (cd $$i; $(MAKE) $(MAKEFLAGS) install); \
	    echo ""; \
	  fi; \
	done; \
	echo ""

install: all
	@ \
	echo ""

clean:
	@ \
	for i in ${HYPRE_EXTRA_DIRS}; \
	do \
	  if [ -d $$i ]; \
	  then \
	    (cd $$i; $(MAKE) $(MAKEFLAGS) clean); \
	  fi; \
	done

veryclean:
	@ \
	for i in ${HYPRE_EXTRA_DIRS}; \
	do \
	  if [ -d $$i ]; \
	  then \
	    (cd $$i; $(MAKE) $(MAKEFLAGS) veryclean); \
	  fi; \
	done

