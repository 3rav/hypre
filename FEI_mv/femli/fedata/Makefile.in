.SUFFIXES:
.SUFFIXES: .cxx .c .o

srcdir = @srcdir@
VPATH = @srcdir@
 
CC = @CC@
CXX = @CXX@
 
C_COMPILE_FLAGS=@CFLAGS@
CXX_COMPILE_FLAGS=@CXXFLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
CXXINCLUDES=@INCLUDES@ @MPIINCLUDE@
CDEFS =
CXXDEFS = -DMPICH_SKIP_MPICXX
 
CFLAGS =\
 ${C_COMPILE_FLAGS}\
 -I../../..\
 -I$(srcdir)\
 -I$(srcdir)/..\
 -I$(srcdir)/../..\
 -I$(srcdir)/../../..\
 -I$(srcdir)/../../../utilities\
 -I$(srcdir)/../../../IJ_mv\
 -I$(srcdir)/../../../seq_mv\
 -I$(srcdir)/../../../parcsr_mv\
 ${CINCLUDES}\
 ${CDEFS}
 
CXXFLAGS =\
 ${CXX_COMPILE_FLAGS}\
 -I../../..\
 -I$(srcdir)\
 -I$(srcdir)/..\
 -I$(srcdir)/../../..\
 -I$(srcdir)/../../../utilities\
 -I$(srcdir)/../../../IJ_mv\
 -I$(srcdir)/../../../seq_mv\
 -I$(srcdir)/../../../parcsr_mv\
 ${CXXINCLUDES}\
 ${CXXDEFS}
 
HEADERS =\
 mli_festruct.h\
 mli_fedata.h

FILES =\
 mli_fedata.cxx\
 mli_fedata_utils.cxx

DRIVER_FILES = driver.cxx

OBJS = ${FILES:.cxx=.o}

DRIVER_OBJS = ${DRIVER_FILES:.cxx=.o}

##################################################################
# Targets
##################################################################

driver: ${DRIVER_OBJS} mli_fedata.o
	@echo  "Building" $@ "... "
	${CXX} -o driver $@.o mli_fedata.o ${LFLAGS}

all: ${OBJS} 
 
install: all
##	@cp -f *.o ../lib
#@cp -f $(srcdir)/*.h $$HYPRE_INSTALL_DIR/include/.
 
clean:
	@rm -f *.o

veryclean: clean

##################################################################
# Rules
##################################################################

${OBJS}: ${HEADERS}
 
##################################################################
# Generic rules
##################################################################

.c.o:
	${CC} -o $@ -c ${CFLAGS} $<
.cxx.o:
	${CXX} -o $@ -c ${CXXFLAGS} $<

