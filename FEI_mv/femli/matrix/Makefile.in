##################################################################

all: ${FILES}
 
driver: ${DRIVER_OBJS} ../lib/libHYPRE_mli.a
	@echo  "Building" $@ "... "
	${CXX} -o driver $@.o ${OBJS} ${LFLAGS}

install: all
