.SUFFIXES:
.SUFFIXES: .cxx .c .o

srcdir = @srcdir@
VPATH = @srcdir@
 
MPILIBFLAGS =  -L/usr/local/mpich-1.1.2shm/build/alpha/ch_shmem/lib  -lpmpich -lmpich -lrpc -lgs -lpthread  
LIBFLAGS =   -lm
LDLIBFLAGS =  
BLASLIBFLAGS =  -lHYPRE_blas

LFLAGS =\
 -L.\
 -L../../hypre/lib\
 -L../lib\
 -lHYPRE_mli\
 -lHYPRE_LSI\
 -lHYPRE_superlu\
 -lHYPRE_blas\
 ${BLASLIBFLAGS} \
 ${MPILIBFLAGS} ${LIBFLAGS} ${LDLIBFLAGS}

HEADERS =\
 mli_matrix.h

FILES =\
 mli_matrix.cxx \
 mli_matrix_mult.cxx \
 mli_matrix_utils.cxx

DRIVER_FILES = driver.cxx

DRIVER_OBJS = ${DRIVERS_FILE:.cxx=.o}

##################################################################
