.SUFFIXES:
.SUFFIXES: .cxx .c .o

srcdir = @srcdir@
VPATH = @srcdir@
 
CC = @CC@
CXX = @CXX@
 
C_COMPILE_FLAGS=@CFLAGS@
CXX_COMPILE_FLAGS=@CXXFLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
CXXINCLUDES=@INCLUDES@ @MPIINCLUDE@
CDEFS =
CXXDEFS = -DMPICH_SKIP_MPICXX
 
CFLAGS =\
 ${C_COMPILE_FLAGS}\
 -I../../..\
 -I$(srcdir)\
 -I$(srcdir)/..\
 -I$(srcdir)/../..\
 -I$(srcdir)/../../..\
 -I$(srcdir)/../../../utilities\
 -I$(srcdir)/../../../parcsr_mv\
 -I$(srcdir)/../../../seq_mv\
 -I$(srcdir)/../../../IJ_mv\
 ${CINCLUDES}\
 ${CDEFS}
 
CXXFLAGS =\
 ${CXX_COMPILE_FLAGS}\
 -I../../..\
 -I$(srcdir)\
 -I$(srcdir)/..\
 -I$(srcdir)/../..\
 -I$(srcdir)/../../..\
 -I$(srcdir)/../../../utilities\
 -I$(srcdir)/../../../parcsr_mv\
 -I$(srcdir)/../../../seq_mv\
 -I$(srcdir)/../../../IJ_mv\
 ${CXXINCLUDES}\
 ${CXXDEFS}
 
MPILIBFLAGS =  -L/usr/local/mpich-1.1.2shm/build/alpha/ch_shmem/lib  -lpmpich -lmpich -lrpc -lgs -lpthread  
LIBFLAGS =   -lm
LDLIBFLAGS =  
BLASLIBFLAGS =  -lHYPRE_blas

LFLAGS =\
 -L.\
 -L../../hypre/lib\
 -L../lib\
 -lHYPRE_mli\
 -lHYPRE_LSI\
 -lHYPRE_superlu\
 -lHYPRE_blas\
 ${BLASLIBFLAGS} \
 ${MPILIBFLAGS} ${LIBFLAGS} ${LDLIBFLAGS}

HEADERS =\
 mli_matrix.h

FILES =\
 mli_matrix.cxx \
 mli_matrix_mult.cxx \
 mli_matrix_utils.cxx

DRIVER_FILES = driver.cxx

OBJS = ${FILES:.cxx=.o}

DRIVER_OBJS = ${DRIVERS_FILE:.cxx=.o}

##################################################################
# Targets
##################################################################

all: ${OBJS}
 
driver: ${DRIVER_OBJS} ../lib/libHYPRE_mli.a
	@echo  "Building" $@ "... "
	${CXX} -o driver $@.o ${OBJS} ${LFLAGS}

install: all
##	@cp -f *.o ../lib
#@cp -f $(srcdir)/*.h $$HYPRE_INSTALL_DIR/include/.
 
clean:
	@rm -f *.o

veryclean: clean

##################################################################
# Rules
##################################################################

${OBJS}: ${HEADERS}
 
##################################################################
# Generic rules
##################################################################

.c.o:
	${CC} -o $@ -c ${CFLAGS} $<
.cxx.o:
	${CXX} -o $@ -c ${CXXFLAGS} $<

