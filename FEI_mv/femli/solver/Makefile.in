.SUFFIXES:
.SUFFIXES: .C .c .o

srcdir = @srcdir@
VPATH = @srcdir@
 
CC = @CC@
CXX = @CXX@
 
SUPERLU_INCLUDE = -I../../SuperLU

C_COMPILE_FLAGS=@CFLAGS@
CXX_COMPILE_FLAGS=@CXXFLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@ ${SUPERLU_INCLUDE}
CXXINCLUDES=@INCLUDES@ @MPIINCLUDE@ ${SUPERLU_INCLUDE}
CDEFS = -DMLI_SUPERLU
CXXDEFS = -DMLI_SUPERLU
 
CFLAGS =\
 ${C_COMPILE_FLAGS}\
 -I$(srcdir)\
 -I$(srcdir)/..\
 -I$(srcdir)/../..\
 -I$(srcdir)/../../..\
 -I$(srcdir)/../../../utilities\
 -I$(srcdir)/../../../parcsr_mv\
 -I$(srcdir)/../../../seq_mv\
 -I$(srcdir)/../../../IJ_mv\
 ${CINCLUDES}\
 ${CDEFS}
 
CXXFLAGS =\
 ${CXX_COMPILE_FLAGS}\
 -I$(srcdir)\
 -I$(srcdir)/..\
 -I$(srcdir)/../..\
 -I$(srcdir)/../../..\
 -I$(srcdir)/../../../utilities\
 -I$(srcdir)/../../../parcsr_mv\
 -I$(srcdir)/../../../seq_mv\
 -I$(srcdir)/../../../IJ_mv\
 ${CXXINCLUDES}\
 ${CXXDEFS}
 
HEADERS =\
 mli_solver.h \
 mli_solver_jacobi.h \
 mli_solver_gs.h \
 mli_solver_sgs.h \
 mli_solver_parasails.h \
 mli_solver_bsgs.h \
 mli_solver_mls.h \
 mli_solver_superlu.h \
 mli_solver_arpacksuperlu.h \
 mli_solver_chebyshev.h \
 mli_solver_cg.h

FILES =\
 mli_solver.C \
 mli_solver_jacobi.C \
 mli_solver_gs.C \
 mli_solver_sgs.C \
 mli_solver_parasails.C \
 mli_solver_bsgs.C \
 mli_solver_mls.C \
 mli_solver_superlu.C \
 mli_solver_arpacksuperlu.C \
 mli_solver_chebyshev.C \
 mli_solver_cg.C

OBJS = ${FILES:.C=.o}

##################################################################
# Targets
##################################################################

all: ${OBJS} 
 
install: all
	@cp -f *.o ../lib
#@cp -f $(srcdir)/*.h $$HYPRE_INSTALL_DIR/include/.
 
clean:
	@rm -f *.o

veryclean: clean

##################################################################
# Rules
##################################################################

${OBJS}: ${HEADERS}
 
##################################################################
# Generic rules
##################################################################

.c.o:
	${CC} -o $@ -c ${CFLAGS} $<
.C.o:
	${CXX} -o $@ -c ${CXXFLAGS} $<

