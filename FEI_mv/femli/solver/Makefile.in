.SUFFIXES:
.SUFFIXES: .cxx .c .o

srcdir = @srcdir@
VPATH = @srcdir@
 
CC = @CC@
CXX = @CXX@
 
SUPERLU_INCLUDE = -I$(srcdir)/../../SuperLU

C_COMPILE_FLAGS=@CFLAGS@
CXX_COMPILE_FLAGS=@CXXFLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@ ${SUPERLU_INCLUDE}
CXXINCLUDES=@INCLUDES@ @MPIINCLUDE@ ${SUPERLU_INCLUDE}
CDEFS = -DMLI_SUPERLU
CXXDEFS = -DMLI_SUPERLU -DMPICH_SKIP_MPICXX
 
CFLAGS =\
 ${C_COMPILE_FLAGS}\
 -I../../../\
 -I$(srcdir)\
 -I$(srcdir)/..\
 -I$(srcdir)/../..\
 -I$(srcdir)/../../..\
 -I$(srcdir)/../../../utilities\
 -I$(srcdir)/../../../parcsr_mv\
 -I$(srcdir)/../../../seq_mv\
 -I$(srcdir)/../../../IJ_mv\
 ${CINCLUDES}\
 ${CDEFS}
 
CXXFLAGS =\
 ${CXX_COMPILE_FLAGS}\
 -I../../../\
 -I$(srcdir)\
 -I$(srcdir)/..\
 -I$(srcdir)/../..\
 -I$(srcdir)/../../..\
 -I$(srcdir)/../../../utilities\
 -I$(srcdir)/../../../parcsr_mv\
 -I$(srcdir)/../../../parcsr_ls\
 -I$(srcdir)/../../../krylov\
 -I$(srcdir)/../../../seq_mv\
 -I$(srcdir)/../../../IJ_mv\
 ${CXXINCLUDES}\
 ${CXXDEFS}
 
HEADERS =\
 mli_solver.h \
 mli_solver_jacobi.h \
 mli_solver_bjacobi.h \
 mli_solver_gs.h \
 mli_solver_sgs.h \
 mli_solver_bsgs.h \
 mli_solver_hsgs.h \
 mli_solver_hschwarz.h \
 mli_solver_parasails.h \
 mli_solver_mls.h \
 mli_solver_chebyshev.h \
 mli_solver_cg.h \
 mli_solver_kaczmarz.h \
 mli_solver_superlu.h \
 mli_solver_seqsuperlu.h \
 mli_solver_arpacksuperlu.h

FILES =\
 mli_solver.cxx \
 mli_solver_jacobi.cxx \
 mli_solver_bjacobi.cxx \
 mli_solver_gs.cxx \
 mli_solver_sgs.cxx \
 mli_solver_bsgs.cxx \
 mli_solver_hsgs.cxx \
 mli_solver_hschwarz.cxx \
 mli_solver_parasails.cxx \
 mli_solver_mls.cxx \
 mli_solver_chebyshev.cxx \
 mli_solver_cg.cxx \
 mli_solver_kaczmarz.cxx \
 mli_solver_superlu.cxx \
 mli_solver_seqsuperlu.cxx \
 mli_solver_arpacksuperlu.cxx

OBJS = ${FILES:.cxx=.o}

##################################################################
# Targets
##################################################################

all: ${OBJS} 
 
install: all
##	@cp -f *.o ../lib
#@cp -f $(srcdir)/*.h $$HYPRE_INSTALL_DIR/include/.
 
clean:
	@rm -f *.o

veryclean: clean

##################################################################
# Rules
##################################################################

${OBJS}: ${HEADERS}
 
##################################################################
# Generic rules
##################################################################

.c.o:
	${CC} -o $@ -c ${CFLAGS} $<
.cxx.o:
	${CXX} -o $@ -c ${CXXFLAGS} $<

