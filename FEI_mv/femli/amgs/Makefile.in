.SUFFIXES:
.SUFFIXES: .cxx .c .o

srcdir = @srcdir@
VPATH = @srcdir@
 
CC  = @CC@
CXX = @CXX@
 
C_COMPILE_FLAGS=@CFLAGS@
CXX_COMPILE_FLAGS=@CXXFLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
CXXINCLUDES=@INCLUDES@ @MPIINCLUDE@
CDEFS =
CXXDEFS = -DMPICH_SKIP_MPICXX
 
CFLAGS =\
 ${C_COMPILE_FLAGS}\
 -I$(srcdir)\
 -I$(srcdir)/..\
 -I$(srcdir)/../..\
 -I$(srcdir)/../../..\
 -I$(srcdir)/../../../utilities\
 -I$(srcdir)/../../../parcsr_mv\
 -I$(srcdir)/../../../seq_mv\
 -I$(srcdir)/../../../IJ_mv\
 ${CINCLUDES}\
 ${CDEFS}
 
CXXFLAGS =\
 ${CXX_COMPILE_FLAGS}\
 -I$(srcdir)\
 -I$(srcdir)/..\
 -I$(srcdir)/../..\
 -I$(srcdir)/../../..\
 -I$(srcdir)/../../../utilities\
 -I$(srcdir)/../../../parcsr_mv\
 -I$(srcdir)/../../../seq_mv\
 -I$(srcdir)/../../../IJ_mv\
 -I$(srcdir)/../../../parcsr_ls\
 -I$(srcdir)/../../../krylov\
 ${CXXINCLUDES}\
 ${CXXDEFS}
 
HEADERS =\
 mli_method.h\
 mli_method_amgrs.h\
 mli_method_amgsa.h

FILES =\
 mli_method.cxx\
 mli_method_amgrs.cxx\
 mli_method_amgsa.cxx\
 mli_amgsa_coarsen1.cxx\
 mli_amgsa_calib.cxx\
 mli_amgsa_substructure.cxx

TEMP = ${FILES:.c=.o}
OBJS = ${TEMP:.cxx=.o}

##################################################################
# Targets
##################################################################

all: ${OBJS} 
 
install: all
	@cp -f *.o ../lib
#@cp -f $(srcdir)/*.h $$HYPRE_INSTALL_DIR/include/.
 
clean:
	@rm -f *.o

veryclean: clean
	@rm -f *.o

##################################################################
# Rules
##################################################################

${OBJS}: ${HEADERS}
 
##################################################################
# Generic rules
##################################################################

.c.o:
	${CC} -o $@ -c ${CFLAGS} $<
.cxx.o:
	${CXX} -o $@ -c ${CXXFLAGS} $<

