.SUFFIXES:
.SUFFIXES: .C .c .o

srcdir = @srcdir@
VPATH = @srcdir@
 
CC = @CC@
CXX = @CXX@
 
C_COMPILE_FLAGS=@CFLAGS@
CXX_COMPILE_FLAGS=@CXXFLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
CXXINCLUDES=@INCLUDES@ @MPIINCLUDE@
#CDEFS = -DMLI_DEBUG_DETAILED
#CXXDEFS = -DMLI_DEBUG_DETAILED
CDEFS = 
CXXDEFS = 
 
CFLAGS =\
 ${C_COMPILE_FLAGS}\
 -I$(srcdir)\
 -I$(srcdir)/..\
 -I$(srcdir)/../..\
 -I$(srcdir)/../../..\
 -I$(srcdir)/../../../utilities\
 -I$(srcdir)/../../../parcsr_mv\
 -I$(srcdir)/../../../seq_mv\
 ${CINCLUDES}\
 ${CDEFS}
 
CXXFLAGS =\
 ${CXX_COMPILE_FLAGS}\
 -I$(srcdir)\
 -I$(srcdir)/..\
 -I$(srcdir)/../..\
 -I$(srcdir)/../../..\
 -I$(srcdir)/../../../utilities\
 -I$(srcdir)/../../../parcsr_mv\
 -I$(srcdir)/../../../seq_mv\
 ${CXXINCLUDES}\
 ${CXXDEFS}
 
HEADERS =\
 mli.h\
 mli_defs.h\
 mli_oneLevel.h

FILES =\
 mli.C\
 mli_oneLevel.C

OBJS = ${FILES:.C=.o}

##################################################################
# Targets
##################################################################

all: ${OBJS} 
 
install: all
	@cp -f *.o ../lib
#@cp -f $(srcdir)/*.h $$HYPRE_INSTALL_DIR/include/.
 
clean:
	@rm -f *.o

veryclean: clean
	@rm -f *.o

##################################################################
# Rules
##################################################################

${OBJS}: ${HEADERS}
 
##################################################################
# Generic rules
##################################################################

.c.o:
	${CC} -o $@ -c ${CFLAGS} $<
.C.o:
	${CXX} -o $@ -c ${CXXFLAGS} $<

