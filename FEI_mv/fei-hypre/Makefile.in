.SUFFIXES: .cc .c .f .o

all: lib

install:all

CXX = @CXX@

CXXFLAGS = \
 -I../fei-isis\
 -I../isis-mv


#Headers
HEADERS =\
 HYPRE_SLE.h
 
HYPREFILES =\
 HYPRE_SLE.cc

LOCALFILES =


FILES = $(HYPREFILES) $(LOCALFILES)


OBJS = ${FILES:.c=.o} ${FILES:.cc=.o}

${OBJS}: ${HEADERS}


##################################################################
# Main rules
##################################################################

lib: $(PROTOS) ${OBJS}
	@echo  "Building $@ ... "
	@echo  "Building ${OBJS} ... "
	@ar -rcu lib_HYPRE_FEI.a ${OBJS}
	@ranlib lib_HYPRE_FEI.a 

##################################################################
# Generic rules
##################################################################

.cc.o:
	${CXX} -o $@ -c ${CXXFLAGS} $<


