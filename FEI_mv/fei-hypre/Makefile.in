.SUFFIXES: .cc .c .f .o

all: lib

install:all

CXX = @CXX@

CXXFLAGS = \
 -I../fei-isis\
 -I../isis-mv\
 -I../../IJ_matrix_vector\
 -I../../utilities\
 -I../..

HEADERS =\
 HYPRE_SLE.h
 
HYPREFILES =\
 HYPRE_SLE.cc

LOCALFILES =


FILES = $(HYPREFILES) $(LOCALFILES)


OBJS = ${FILES:.c=.o} ${FILES:.cc=.o}

${OBJS}: ${HEADERS}


##################################################################
# Main rules
##################################################################

lib: $(PROTOS) ${OBJS}
	@echo  "Building $@ ... "
	@echo  "Building ${OBJS} ... "
	@ar -rcu libHYPRE_FEI.a ${OBJS}
	@ranlib libHYPRE_FEI.a 

##################################################################
# Targets
##################################################################

clean:
	@rm -f *.o *.dxx

veryclean: clean
	@rm -f libHYPRE_*.a



##################################################################
# Generic rules
##################################################################

.cc.o:
	${CXX} -o $@ -c ${CXXFLAGS} $<


