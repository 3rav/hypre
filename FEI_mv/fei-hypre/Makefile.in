##################################################################
# Targets
##################################################################

all: libHYPRE_FEI.a

install: all
	@cp -f $(srcdir)/cfei-hypre.h $$HYPRE_INSTALL_DIR/include
	@cp -f $(srcdir)/cfei_hypre.h $$HYPRE_INSTALL_DIR/include
	@cp -f $(srcdir)/HYPRE_LinSysCore.h $$HYPRE_INSTALL_DIR/include
	@cp -f $(srcdir)/HYPRE_FEI*.h $$HYPRE_INSTALL_DIR/include
	@cp -f $(srcdir)/LLNL_FEI*.h $$HYPRE_INSTALL_DIR/include
	@cp -f $(BASE_DIR)/base/Data.h $$HYPRE_INSTALL_DIR/include
	@cp -f $(BASE_DIR)/base/Lookup.h $$HYPRE_INSTALL_DIR/include
	@cp -f $(BASE_DIR)/base/LinearSystemCore.h $$HYPRE_INSTALL_DIR/include
	@cp -f $(BASE_DIR)/fei_defs.h $$HYPRE_INSTALL_DIR/include
	@cp -f libHYPRE_FEI.a $$HYPRE_INSTALL_DIR/lib

clean:
	@rm -rf *.o 

veryclean: clean
	@rm -rf *.a 

##################################################################
# Rules
##################################################################
libHYPRE_FEI.a: ${OBJS}
	@echo  "Building $@ ... "
	ar -rcu $@ ${OBJS}
	${RANLIB} $@

${OBJS}: ${HEADERS}
