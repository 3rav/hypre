SHELL = /bin/sh

srcdir = @srcdir@
VPATH = @srcdir@

HYPRE_SUBDIRS =\
 utilities\
 struct_matrix_vector\
 struct_linear_solvers\
 test

all:
	@ \
	for i in ${HYPRE_SUBDIRS}; \
	do \
	echo "Making $$i ..."; \
	(cd $$i; make); \
	echo ""; \
	done

clean:
	@ \
	for i in ${HYPRE_SUBDIRS}; \
	do \
	echo "Cleaning $$i ..."; \
	(cd $$i; make clean); \
	done

veryclean:
	@ \
	for i in ${HYPRE_SUBDIRS}; \
	do \
	echo "Really cleaning $$i ..."; \
	(cd $$i; make veryclean); \
	done

