.SUFFIXES:
.SUFFIXES: .c .f .o

default: lib

all: lib

install:all
	@cp -f HYPRE_*.h $$HYPRE_INSTALL_DIR/include/.
	@cp -f lib_HYPRE_*.a $$HYPRE_INSTALL_DIR/lib/.

HEADERS =
 
HYPREFILES =\
 HYPRE_ConvertPETScMatrixToDistributedMatrix.c \
 HYPRE_ConvertParCSRMatrixToDistributedMatrix.c \
 HYPRE_BuildIJMatrixFromDistributedMatrix.c

FILES = $(HYPREFILES) $(LOCALFILES)

OBJS = ${FILES:.c=.o}

#include site-specific information
include ../bmakes/Makefile

##################################################################
# Main rules
##################################################################

lib: $(PROTOS) ${OBJS}
	@echo  "Building $@ ... "
	@ar -rcu lib_HYPRE_MatrixMatrix.a ${OBJS}
	@ranlib lib_HYPRE_MatrixMatrix.a

${OBJS}: ${HEADERS}

##################################################################
# Generic rules
##################################################################

.c.o:
	${CC} -o $@ -c ${CFLAGS} -I../seq_matrix_vector -I../parcsr_matrix_vector $<

