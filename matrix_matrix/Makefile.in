include ../config/Makefile.config

CC = @CC@

C_COMPILE_FLAGS=@CFLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@

CFLAGS = \
 -I..\
 -I$(srcdir)/..\
 -I$(srcdir)/../utilities\
 -I$(srcdir)/../distributed_matrix\
 -I$(srcdir)/../seq_mv\
 -I$(srcdir)/../parcsr_mv\
 ${C_COMPILE_FLAGS}\
 ${CINCLUDES} ${CDEFS}

EXTRA_FILES =\
 internal_protos.h

HEADERS = HYPRE_matrix_matrix_protos.h
 
FILES =\
 HYPRE_BuildIJMatrixFromDistributedMatrix.c\
 HYPRE_ConvertParCSRMatrixToDistributedMatrix.c\
 HYPRE_ConvertPETScMatrixToDistributedMatrix.c

OBJS = ${FILES:.c=.o}

##################################################################
# Targets
##################################################################

all: libHYPRE_MatrixMatrix.a

install: all
	@cp -f $(srcdir)/HYPRE_*.h $$HYPRE_INSTALL_DIR/include/.
	@cp -f libHYPRE_*.a $$HYPRE_INSTALL_DIR/lib/.
clean:
	@rm -f *.o 

veryclean: clean
	@rm -f lib*.a Makefile

##################################################################
# Rules
##################################################################

libHYPRE_MatrixMatrix.a: ${OBJS}
	@echo  "Building $@ ... "
	@ar -rcu libHYPRE_MatrixMatrix.a ${OBJS}
	${RANLIB} $@

${OBJS}: ${HEADERS}
