#!/bin/sh

#===========================================================================
# This script builds all of the code in the AMG directory structure
#===========================================================================

. $AMG_SRC/config/build_generic

#=============================================================================
# Build
#=============================================================================

DIRS="tools amg"

for i in $DIRS
do
   echo "Building $i"
   (cd $AMG_SRC/$i; ./build)
done

#=============================================================================
# Install
#=============================================================================

#=============================================================================
# Clean
#=============================================================================

