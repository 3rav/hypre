.SUFFIXES:
.SUFFIXES: .C .c .o

srcdir = @srcdir@
VPATH = @srcdir@
 
CC  = @CC@
CXX = @CXX@
 
C_COMPILE_FLAGS=@CFLAGS@
CXX_COMPILE_FLAGS=@CXXFLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
CXXINCLUDES=@INCLUDES@ @MPIINCLUDE@
CDEFS =
CXXDEFS =
 
CFLAGS =\
 ${C_COMPILE_FLAGS}\
 -I$(srcdir)\
 -I$(srcdir)/../..\
 -I$(srcdir)/../../utilities\
 -I$(srcdir)/../../parcsr_mv\
 -I$(srcdir)/../../seq_mv\
 ${CINCLUDES}\
 ${CDEFS}
 
CXXFLAGS =\
 ${CXX_COMPILE_FLAGS}\
 -I$(srcdir)\
 -I$(srcdir)/../..\
 -I$(srcdir)/../../utilities\
 -I$(srcdir)/../../parcsr_mv\
 -I$(srcdir)/../../seq_mv\
 ${CXXINCLUDES}\
 ${CXXDEFS}
 
HEADERS =\
 mli_method.h\
 mli_method_amgsa.h

FILES =\
 mli_method.C\
 mli_method_amgsa.C\
 mli_amgsa_coarsen1.C\
 mli_amgsa_calib.C

TEMP = ${FILES:.c=.o}
OBJS = ${TEMP:.C=.o}

##################################################################
# Targets
##################################################################

all: ${OBJS} 
 
install: all
	@cp -f *.o ../lib
#@cp -f $(srcdir)/*.h $$HYPRE_INSTALL_DIR/include/.
 
clean:
	@rm -f *.o

veryclean: clean
	@rm -f *.o

##################################################################
# Rules
##################################################################

${OBJS}: ${HEADERS}
 
##################################################################
# Generic rules
##################################################################

.c.o:
	${CC} -o $@ -c ${CFLAGS} $<
.C.o:
	${CXX} -o $@ -c ${CXXFLAGS} $<

