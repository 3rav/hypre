.SUFFIXES:
.SUFFIXES: .c .f .o

srcdir = @srcdir@
VPATH = @srcdir@
 
CC = @CC@
 
C_COMPILE_FLAGS=@CFLAGS@
CXX_COMPILE_FLAGS=@CXXFLAGS@
F77_COMPILE_FLAGS=@F77FLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
CDEFS =
 
#Pilut flags and definitions

HYPRE_DIR = @HYPRE_TOP_SRC_DIR@

# FC_LIB contains the libraries for a CLINKER to use for code containing
# FORTRAN code (such as I/O or special Fortran runtimes).
#
FC_LIB         = -L/opt/SUNWspro/SC4.2/lib -lF77 -lM77 -lsunmath
BLAS_LIB       =  @BLASLIBFLAGS@

CFLAGS =\
 ${C_COMPILE_FLAGS}\
 -I../..\
 -I$(srcdir)\
 -I$(srcdir)/../..\
 -I$(srcdir)/../../utilities\
 -I$(srcdir)/../../seq_mv\
 -I$(srcdir)/../../parcsr_mv\
 ${CINCLUDES}\
 ${CDEFS}
 
RANLIB= @RANLIB@
 
MPILIBFLAGS = @MPILIBDIRS@ @MPILIBS@ @MPIFLAGS@
LIBFLAGS = @LIBDIRS@ @LIBS@
LDLIBFLAGS = @LDLIBDIRS@ @LDLIBS@
 
LFLAGS =\
 -L.\
 -L../../seq_mv\
 -L../../parcsr_mv\
 -L../../utilities\
 -lHYPRE_mli_mat\
 -lHYPRE_parcsr_mv\
 -lHYPRE_seq_mv\
 -lHYPRE_utilities\
 ${MPILIBFLAGS} ${LIBFLAGS} ${LDLIBFLAGS}

HEADERS =\
 mli_matrix.h\
 mli_pcsr_bool_mat.h

FILES =\
 mli_pcsr_bool_mat.c\
 mli_pcsr_bool_matop.c

DRIVER_FILES =\
 driver.c\
 driver_matmul.c\
 driver_aat.c\
 driver_matvec.c

OBJS = ${FILES:.c=.o}
DRIVER_OBJS = ${DRIVER_FILES:.c=.o}

##################################################################
# Targets
##################################################################

all: libHYPRE_mli_mat.a 
 
driver_matmul: driver_matmul.o libHYPRE_mli_mat.a
	@echo  "Linking" $@ "... "
	${CC} -o driver_matmul driver_matmul.o ${LFLAGS} 

driver_aat: driver_aat.o libHYPRE_mli_mat.a
	@echo  "Linking" $@ "... "
	${CC} -o driver_aat driver_aat.o ${LFLAGS} 

install: all
	@cp -f $(srcdir)/*.h $$HYPRE_INSTALL_DIR/include/.
	@cp -f libHYPRE_*.a $$HYPRE_INSTALL_DIR/lib/.
 
clean:
	@rm -f *.o

veryclean: clean
	@rm -f libHYPRE_mli_mat.a
	@rm -f driver 

##################################################################
# Rules
##################################################################

libHYPRE_mli_mat.a: ${OBJS}
	@echo  "Building $@ ... "
	ar -rcu $@ ${OBJS}
	@RANLIB@ $@
 
${OBJS}: ${HEADERS}
 
##################################################################
# Generic rules
##################################################################

.c.o:
	${CC} -o $@ -c ${CFLAGS} $<

