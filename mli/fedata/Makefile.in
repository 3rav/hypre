.SUFFIXES:
.SUFFIXES: .C .c .o

srcdir = @srcdir@
VPATH = @srcdir@
 
CC = @CC@
CXX = @CXX@
 
C_COMPILE_FLAGS=@CFLAGS@
CXX_COMPILE_FLAGS=@CXXFLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
CXXINCLUDES=@INCLUDES@ @MPIINCLUDE@
CDEFS =
CXXDEFS =
 
CFLAGS =\
 ${C_COMPILE_FLAGS}\
 -I$(srcdir)\
 -I$(srcdir)/../..\
 -I$(srcdir)/../../utilities\
 -I$(srcdir)/../../seq_mv\
 ${CINCLUDES}\
 ${CDEFS}
 
CXXFLAGS =\
 ${CXX_COMPILE_FLAGS}\
 -I$(srcdir)\
 -I$(srcdir)/../..\
 -I$(srcdir)/../../utilities\
 -I$(srcdir)/../../seq_mv\
 ${CXXINCLUDES}\
 ${CXXDEFS}
 
HEADERS =\
 mli_festruct.h\
 mli_fedata.h

FILES =\
 mli_fedata.C\
 mli_fedata_utils.C

DRIVER_FILES = driver.C

OBJS = ${FILES:.C=.o}

DRIVER_OBJS = ${DRIVER_FILES:.C=.o}

##################################################################
# Targets
##################################################################

driver: ${DRIVER_OBJS} mli_fedata.o
	@echo  "Building" $@ "... "
	${CXX} -o driver $@.o mli_fedata.o ${LFLAGS}

all: ${OBJS} 
 
install: all
	@cp -f *.o ../lib
#@cp -f $(srcdir)/*.h $$HYPRE_INSTALL_DIR/include/.
 
clean:
	@rm -f *.o

veryclean: clean

##################################################################
# Rules
##################################################################

${OBJS}: ${HEADERS}
 
##################################################################
# Generic rules
##################################################################

.c.o:
	${CC} -o $@ -c ${CFLAGS} $<
.C.o:
	${CXX} -o $@ -c ${CXXFLAGS} $<

