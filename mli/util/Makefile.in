.SUFFIXES:
.SUFFIXES: .f .C .c .o

srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
CXX = @CXX@
F77 = @F77@

C_COMPILE_FLAGS=@CFLAGS@
CXX_COMPILE_FLAGS=@CXXFLAGS@
F77_COMPILE_FLAGS=@F77FLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
CXXINCLUDES=@INCLUDES@ @MPIINCLUDE@
F77INCLUDES=@INCLUDES@ @MPIINCLUDE@
CDEFS =
CXXDEFS =
F77DEFS =

CFLAGS =\
 ${C_COMPILE_FLAGS}\
 -I$(srcdir)\
 -I$(srcdir)/..\
 -I$(srcdir)/../..\
 -I$(srcdir)/../../utilities\
 -I$(srcdir)/../../parcsr_mv\
 -I$(srcdir)/../../seq_mv\
 ${CINCLUDES}\
 ${CDEFS}
 
CXXFLAGS =\
 ${CXX_COMPILE_FLAGS}\
 -I$(srcdir)\
 -I$(srcdir)/..\
 -I$(srcdir)/../..\
 -I$(srcdir)/../../utilities\
 -I$(srcdir)/../../parcsr_mv\
 -I$(srcdir)/../../seq_mv\
 ${CXXINCLUDES}\
 ${CXXDEFS}
 
F77FLAGS =\
 ${F77_COMPILE_FLAGS}\
 ${F77INCLUDES}\
 ${F77DEFS}
 
HEADERS =\
 mli_utils.h

FILES =\
 mli_utils.c\
 mli_utils_fortran.f

TEMP = ${FILES:.c=.o}
OBJS = ${TEMP:.f=.o}

##################################################################
# Targets
##################################################################

all: ${OBJS} 
 
install: all
	@cp -f *.o ../lib
#@cp -f $(srcdir)/*.h $$HYPRE_INSTALL_DIR/include/.
 
clean:
	@rm -f *.o

veryclean: clean

##################################################################
# Rules
##################################################################

${OBJS}: ${HEADERS}
 
##################################################################
# Generic rules
##################################################################

.c.o:
	${CC} -o $@ -c ${CFLAGS} $<
.C.o:
	${CXX} -o $@ -c ${CXXFLAGS} $<
.f.o:
	${F77} -o $@ -c ${F77FLAGS} $<

