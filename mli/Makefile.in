SHELL = /bin/sh

srcdir = @srcdir@
VPATH = @srcdir@

# These are directories that are not yet officially in HYPRE
HYPRE_MLI_DIRS =\
 matrix

all: 
	@ \
	for i in ${HYPRE_MLI_DIRS}; \
	do \
	  if [ -d $$i ]; \
	  then \
	    echo "Making $$i ..."; \
	    (cd $$i; make install); \
	  fi; \
	done;

install: all

clean:
	@ \
	for i in ${HYPRE_MLI_DIRS}; \
	do \
	  if [ -d $$i ]; \
	  then \
	    (cd $$i; make clean); \
	  fi; \
	done

veryclean:
	@ \
	for i in ${HYPRE_MLI_DIRS}; \
	do \
	  if [ -d $$i ]; \
	  then \
	    (cd $$i; make veryclean); \
	  fi; \
	done

