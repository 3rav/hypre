.SUFFIXES:
.SUFFIXES: .c .f .o

srcdir = @srcdir@
VPATH = @srcdir@


CC = @CC@

C_COMPILE_FLAGS=@CFLAGS@
CXX_COMPILE_FLAGS=@CXXFLAGS@
F77_COMPILE_FLAGS=@F77FLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
COPT = @COPT@
CDEBUG = @CDEBUG@
CDEFS = @HYPREDEFS@ @TIMERDEFS@ -DHYPRE_TIMING 

CFLAGS =\
   ${C_COMPILE_FLAGS}\
   ${CINCLUDES}\
   ${COPT}\
   ${CDEBUG}\
   ${CDEFS}

RANLIB = @RANLIB@


##################################################################
# Targets
##################################################################

all: libHYPRE_utilities.a

install: all
	@cp -f HYPRE_*.h utilities.h $$HYPRE_INSTALL_DIR/include
	@cp -f libHYPRE_*.a $$HYPRE_INSTALL_DIR/lib

clean:
	@rm -f *.o

veryclean: clean
	@rm -f libHYPRE_*.a

##################################################################
# Utilities rules
##################################################################
 
UTILITIES_HEADERS =\
 memory.h\
 mpistubs.h\
 thread_mpistubs.h\
 threading.h\
 timing.h\
 utilities.h\
 HYPRE_utilities.h

UTILITIES_FILES =\
 memory.c\
 memory_dmalloc.c\
 mpistubs.c\
 thread_mpistubs.c\
 threading.c\
 timer.c\
 timing.c\
 random.c

UTILITIES_OBJS = ${UTILITIES_FILES:.c=.o}
 
libHYPRE_utilities.a: ${UTILITIES_OBJS}
	@echo  "Building $@ ... "
	ar -rcu $@ ${UTILITIES_OBJS}
	${RANLIB} $@

${UTILITIES_OBJS}: ${UTILITIES_HEADERS}

##################################################################
# Generic rules
##################################################################

.c.o:
	${CC} -o $@ -c ${CFLAGS} $<

.f.o:
	${F77} -o $@ -c ${FFLAGS} $<

