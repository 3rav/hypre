include ../../config/Makefile.config

CC = @CC@

C_COMPILE_FLAGS=@CFLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
 
CFLAGS =\
 ${C_COMPILE_FLAGS}\
 -I..\
 -I$(srcdir)/..\
 -I$(srcdir)/utilities\
 -I$(srcdir)/IJ_mv\
 -I$(srcdir)/parcsr_mv\
 -I$(srcdir)/parcsr_ls\
 -I$(srcdir)/seq_mv\
 -I$(srcdir)/krylov\
 ${CINCLUDES}

HEADERS =\
 HYPRE_lobpcg.h\
 lobpcg.h\
 mmio.h

FILES =\
 lobpcg.c\
 lobpcg_matrix.c\
 lobpcg_utilities.c

OBJS = ${FILES:.c=.o}

##################################################################
# Targets
##################################################################

all: libHYPRE_lobpcg.a 

install: all
	@cp -f $(srcdir)/HYPRE*.h $$HYPRE_INSTALL_DIR/include/.
	@cp -f $(srcdir)/lobpcg.h $$HYPRE_INSTALL_DIR/include/.
	@cp -f lib*.a $$HYPRE_INSTALL_DIR/lib/.
clean:
	@rm -f *.o

veryclean: clean
	@rm -f lib*.a


##################################################################
# Rules
##################################################################

libHYPRE_lobpcg.a: ${OBJS}
	@echo  "Building $@ ... "
	ar -rcu $@ ${OBJS}
	${RANLIB} $@

${OBJS}: ${HEADERS}
