SHELL = /bin/sh

srcdir = @srcdir@
VPATH = @srcdir@

SUBDIR =\
 LOBPCG

all: 
	@ \
	for i in ${SUBDIR}; \
	do \
	  if [ -d $$i ]; \
	  then \
	    echo "Making $$i ..."; \
	    (cd $$i; $(MAKE) install); \
	  fi; \
	done;

install: all

clean:
	@ \
	for i in ${SUBDIR}; \
	do \
	  if [ -d $$i ]; \
	  then \
	    (cd $$i; $(MAKE) clean); \
	  fi; \
	done

veryclean:
	@ \
	for i in ${SUBDIR}; \
	do \
	  if [ -d $$i ]; \
	  then \
	    (cd $$i; $(MAKE) veryclean); \
	  fi; \
	done

