###  If internal BLAS routines are needed, copy the files to the utilities 
###  directory to be included in libHYPRE_utilities.a 

include ../config/Makefile.config


BLAS_HEADERS =\
  f2c.h\
  hypre_blas.h

BLAS_FILES = \
   blas_utils.c\
   dasum.c\
   daxpy.c\
   dcopy.c\
   ddot.c\
   dgemm.c\
   dgemv.c\
   dger.c\
   dnrm2.c\
   drot.c\
   dscal.c\
   dswap.c\
   dsymm.c\
   dsymv.c\
   dsyr2.c\
   dsyr2k.c\
   dsyrk.c\
   dtrmm.c\
   dtrmv.c\
   dtrsm.c\
   dtrsv.c\
   idamax.c


all:
	@ \
	for head in ${BLAS_HEADERS}; \
	do \
	  (cp -f $$head ../utilities); \
	done;\
	for file in ${BLAS_FILES}; \
	do \
	  (cp -f $$file ../utilities); \
	done

install: all

clean:
	@rm -f *.o lib*

veryclean: clean
