.SUFFIXES:
.SUFFIXES: .c .f .o

srcdir = @srcdir@
VPATH = @srcdir@


CC = @CC@

C_COMPILE_FLAGS=@CFLAGS@
CXX_COMPILE_FLAGS=@CXXFLAGS@
F77_COMPILE_FLAGS=@F77FLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
CDEFS = @HYPREDEFS@ -DHYPRE_NO_PTHREAD_MANGLING

CFLAGS =\
 ${C_COMPILE_FLAGS}\
 -I../utilities\
 -I../seq_matrix_vector\
 -I../parcsr_matrix_vector\
 -I../parcsr_linear_solvers\
 ${CINCLUDES}\
 ${CDEFS}

RANLIB= @RANLIB@

MPILIBFLAGS = @MPILIBDIRS@ @MPILIBS@ @MPIFLAGS@
LIBFLAGS = @LIBDIRS@ @LIBS@
LDLIBFLAGS = @LDLIBDIRS@ @LDLIBS@

LFLAGS =\
 -L.\
 -L../utilities\
 -L../seq_matrix_vector\
 -L../parcsr_matrix_vector\
 -lHYPRE_IJ_mv\
 -lHYPRE_parcsr_mv\
 -lHYPRE_mv\
 -lHYPRE_utilities\
 ${MPILIBFLAGS} ${LIBFLAGS} ${LDLIBFLAGS}

HEADERS =\
 aux_parcsr_matrix.h\
 headers.h\
 fortran.h\
 IJ_matrix.h\
 IJ_matrix_vector.h\
 HYPRE_IJMatrix.h

FILES =\
 IJMatrix_parcsr.c\
 HYPRE_IJMatrix.c\
 HYPRE_IJMatrix.c\
 F90_HYPRE_IJMatrix.c

OBJS = ${FILES:.c=.o}

##################################################################
# Targets
##################################################################

all: libHYPRE_IJ_mv.a

install: all

clean:
	@rm -f *.o

veryclean: clean
	@rm -f libHYPRE_*.a
	@rm -f driver

##################################################################
# Rules
##################################################################

libHYPRE_IJ_mv.a: ${OBJS}
	@echo  "Building $@ ... "
	ar -rcu $@ ${OBJS}
	${RANLIB} $@

driver: driver.o libHYPRE_IJ_mv.a
	@echo  "Linking" $@ "... "
	${CC} -o driver driver.o ${LFLAGS}

${OBJS}: ${HEADERS}

##################################################################
# Generic rules
##################################################################

.c.o:
	${CC} -o $@ -c ${CFLAGS} $<

.f.o:
	${F77} -o $@ -c ${FFLAGS} $<
