.SUFFIXES:
.SUFFIXES: .c .f .o

srcdir = @srcdir@
VPATH = @srcdir@
 
 
CC = @CC@

C_COMPILE_FLAGS=@CFLAGS@
CXX_COMPILE_FLAGS=@CXXFLAGS@
F77_COMPILE_FLAGS=@F77FLAGS@ 
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
CDEFS = @HYPREDEFS@
 
CFLAGS =\
 ${C_COMPILE_FLAGS}\
 -I../utilities\
 ${CINCLUDES}\
 ${CDEFS}
 
RANLIB= @RANLIB@
 
LIBFLAGS = @LIBDIRS@ @LIBS@
LDLIBFLAGS = @LDLIBDIRS@ @LDLIBS@
 
LFLAGS =\
 -L.\
 -L../utilities\
 -lHYPRE_mv\
 -lHYPRE_utilities\
 ${LIBFLAGS} ${LDLIBFLAGS}


HEADERS =\
 HYPRE_seq_mv.h\
 seq_matrix_vector.h\
 csr_matrix.h\
 headers.h\
 mapped_matrix.h\
 multiblock_matrix.h\
 vector.h

FILES =\
 HYPRE_csr_matrix.c\
 HYPRE_mapped_matrix.c\
 HYPRE_multiblock_matrix.c\
 HYPRE_vector.c\
 csr_matop.c\
 csr_matrix.c\
 csr_matvec.c\
 genpart.c\
 mapped_matrix.c\
 multiblock_matrix.c\
 vector.c

OBJS = ${FILES:.c=.o}

##################################################################
# Targets
##################################################################
 
all: libHYPRE_seq_mv.a
 
install: all
 
clean:
	@rm -f *.o
 
veryclean: clean
	@rm -f libHYPRE_seq_mv.a
 

##################################################################
# Main rules
##################################################################

libHYPRE_seq_mv.a: ${OBJS}
	@echo  "Building $@ ... "
	ar -rcu $@ ${OBJS}
	${RANLIB} $@

${OBJS}: ${HEADERS}

##################################################################
# Generic rules
##################################################################

.c.o:
	${CC} -o $@ -c ${CFLAGS} $<

.f.o:
	${F77} -o $@ -c ${FFLAGS} $<

