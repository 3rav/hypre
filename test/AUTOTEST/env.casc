#==============================================================================
# Over ride the default g++ compiler/linker used in mpiCC
#==============================================================================
PATH=/usr/xpg4/bin:/opt/SUNWspro/bin:/bin:/usr/bin:/usr/ucb:/usr/ccs/bin
if [ -x "/usr/bin/uname" ] 
then
    OS_RELEASE=`/usr/bin/uname -r`
fi
if [ -x "/usr/bin/hostname" ] 
then
    HYPRE_HOST=`/usr/bin/hostname`
fi

#=============================================================================
# Based on what we found from system queries set HYPRE_ARCH
#=============================================================================
unset CC
unset CXX
unset F77
unset MPICH_CC
unset MPICH_CLINKER
unset MPICH_CCC
unset MPICH_CCLINKER
unset MPICH_F77
unset MPICH_FLINKER

case "$HYPRE_HOST" in

  poincare*)
##  PARASOFT=/usr/local/ParaSoft/insure++5.1
##  export PARASOFT
##  PATH=$PARASOFT/bin.solaris:$PATH
    KAI=/usr/local/KAI/KCC-4.0f/KCC_BASE
    export KAI
    PATH=$KAI/bin:$PATH
    PATH=/usr/local/java/java1.2/bin:/usr/local/ssh/openssh-3.0.2p1/bin:$PATH
    PATH=/usr/local/mpi/mpich-1.2.0/bin:$PATH
    PATH=$PATH:/usr/local/bin:/home/casc/bin
# over ride default g++ compiler for mpiCC
    MPICH_CCLINKER=CC
    MPICH_CCC=CC
    export MPICH_CCLINKER MPICH_CCC
    ;;
  perrin*)
    KAI=/usr/local/KAI/KCC-4.0f/KCC_BASE
    export KAI
    PATH=$KAI/bin:$PATH
    PATH=/usr/local/java/java1.2/bin:/usr/local/ssh/openssh-3.0.2p1/bin:$PATH
    PATH=/usr/local/mpi/mpich-1.2.0/bin:$PATH
    PATH=$PATH:/usr/local/bin:/home/casc/bin
    CC=gcc
    CXX=g++
    F77=g77
    export CC CXX F77
    ;;
  achilles*|sunup*)
##  PARASOFT=/usr/apps/ParaSoft/insure++5.1
##  export PARASOFT
##  PATH=$PARASOFT/bin.solaris:$PATH
    KAI=/usr/apps/KAI/KCC-4.0f/KCC_BASE
    export KAI
    PATH=$KAI/bin:$PATH
    PATH=/usr/apps/mpich/1.2.4/bin:$PATH
    PATH=$PATH:/usr/ucb:/usr/local/bin:/usr/apps/bin:/home/casc/bin
    . /usr/apps/Rational/purifyplus_setup.sh
    MPICH_CCLINKER=CC
    MPICH_CCC=CC
    export MPICH_CCLINKER MPICH_CCC
    ;;
  sundown*)
##  PARASOFT=/usr/apps/ParaSoft/insure++5.1
##  export PARASOFT
##  PATH=$PARASOFT/bin.solaris:$PATH
    KAI=/usr/apps/KAI/KCC-4.0f/KCC_BASE
    export KAI
    PATH=$KAI/bin:$PATH
    PATH=/usr/apps/mpich/1.2.4/bin:$PATH
    PATH=$PATH:/usr/ucb:/usr/local/bin:/usr/apps/bin:/home/casc/bin
    . /usr/apps/Rational/purifyplus_setup.sh
    CC=gcc
    CXX=g++
    F77=g77
    export CC CXX F77
    ;;
  *)
    ;;
esac
export PATH
