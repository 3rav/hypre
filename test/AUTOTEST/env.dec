PATH=/usr/local/guide.assure/guide40.22.5/bin
PATH=${PATH}:/usr/local/Purify/bin:/usr/local/parasoft/bin.alpha4
PATH=${PATH}:/bin:/usr/bin:/usr/ccs/bin:/usr/bin/X11
PATH=${PATH}:/usr/local/bin:/usr/local/apps/bin:/usr/gapps/bin
export PATH
BIN_SH=xpg4
export BIN_SH
if [ -x "/bin/hostname" ] 
then
    HYPRE_HOST=`/bin/hostname`
fi

#=============================================================================
# Based on what we found from system queries set HYPRE_ARCH
#=============================================================================

case "$HYPRE_HOST" in
  tckk*|tc2k*)                        # mpicc and friends is broken
    LM_LICENSE_FILE=/usr/local/etc/license.client
    export LM_LICENSE_FILE
            ;;
  *)
    LM_LICENSE_FILE=/usr/local/etc/license.client
    export LM_LICENSE_FILE
            ;;
esac
