        else
	  HYPRE_MACHINE_COMMANDS="-me 1 -nsb 1 -o 1 -l 1 -a 2 -cf"
          HYPRE_MESSAGE='SECONDARY[ASCI-Frost]'
        fi
	perform_test
        shift;;
    -gps | -gpsmp)
        HYPRE_ARCH="dec"
        HYPRE_COMPILE_MACHINE="gps"
        HYPRE_RUN_MACHINE="gps320"
