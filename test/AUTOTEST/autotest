#==============================================================================
# Autotest completion check: create "autotest finished" file
#==============================================================================

#touch $HYPRE_AUTOTEST_DIR/autotest_finished
chmod -fR a+rX,ug+w,o-w linear_solvers
chgrp -fR hypre linear_solvers

umask $OldMask
