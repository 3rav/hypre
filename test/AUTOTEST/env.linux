PATH=/bin:/usr/bin:/usr/local/bin
if [ -x "/bin/hostname" ] 
then
    HYPRE_HOST=`/bin/hostname`
fi

#=============================================================================
# Based on what we found from system queries set HYPRE_ARCH
#=============================================================================

case "$HYPRE_HOST" in
   tux83)                   
            PARASOFT=/usr/apps/ParaSoft/insure++5.2
            export PARASOFT
            PATH=$PARASOFT/bin.linux2:$PATH
            PATH=/usr/apps/mpich/1.2.4/bin:$PATH
###         PATH=/usr/apps/gcc/3.2/bin:$PATH # used GNU gcc 3.2 compiler
            PATH=/usr/apps/latex2html/2002-2-1/bin:$PATH
            PATH=$PATH:/usr/apps/bin
            ;;
   tux71)                   
            PATH=/usr/apps/mpich/1.2.4/bin:$PATH
            PATH=/usr/apps/gcc/3.2/bin:$PATH # used GNU gcc 3.2 compiler
            PATH=/usr/apps/latex2html/2002-2-1/bin:$PATH
            PATH=$PATH:/usr/apps/bin
            ;;
   tux*)                          
            PGI=/usr/apps/pgi/3.3  # used PGI compiler3
            export PGI
            PATH=$PGI/linux86/bin:$PATH
            PARASOFT=/usr/apps/ParaSoft/insure++5.2
            export PARASOFT
            PATH=$PARASOFT/bin.linux2:$PATH
            PATH=/usr/apps/mpich/1.2.4/bin:$PATH
            PATH=/usr/apps/latex2html/2002-2-1/bin:$PATH
            PATH=$PATH:/usr/apps/bin
            ;;
   lx*)
            PATH=/usr/local/tools/mpich/new_mpi/bin:$PATH
            ;;
   vivid*)                         # uses gcc 3.0
            ;;
   pengra*)                        # uses mpiicc (Intel compiler)
            PATH=/usr/lib/mpi/bin:/opt/intel/compiler60/ia32/bin:$PATH
            ;;
   *)
            ;;
esac

export PATH
