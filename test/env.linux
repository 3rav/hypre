PATH=/bin:/usr/bin:/usr/local/bin
if [ -x "/bin/hostname" ] 
then
    HYPRE_HOST=`/bin/hostname`
fi

#=============================================================================
# Based on what we found from system queries set HYPRE_ARCH
#=============================================================================

case "$HYPRE_HOST" in
   tux*)
            PATH=/usr/apps/pgi/3.2/linux86/bin:$PATH
            PATH=/usr/apps/mpich/1.2.1/bin:$PATH
            PATH=/usr/apps/bin:$PATH
            ;;
   lx*)
            PATH=/usr/local/mpich-1.2.1/bin:$PATH
            ;;
   vivid*)
            ;;
   *)
            ;;
esac

export PATH
