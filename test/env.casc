#==============================================================================
# Over ride the default g++ compiler/linker used in mpiCC
#==============================================================================
PATH=/usr/xpg4/bin:/opt/SUNWspro/bin:/bin:/usr/bin
if [ -x "/bin/hostname" ] 
then
    HYPRE_HOST=`/bin/hostname`
fi
case "$HYPRE_HOST" in
  perrin*)
    PARASOFT=/usr/local/ParaSoft/insure++5.1
    export PARASOFT
    PATH=$PARASOFT/bin.solaris:$PATH
    PATH=/usr/local/mpi/mpich-1.2.0/bin:$PATH
    PATH=$PATH:/usr/local/bin:/home/casc/bin
    ;;
  achilles*)
    PARASOFT=/usr/apps/ParaSoft/insure++5.1
    export PARASOFT
    PATH=$PARASOFT/bin.solaris:$PATH
    KAI=/usr/apps/KAI/KCC-4.0f/KCC_BASE
    export KAI
    PATH=$KAI/bin:$PATH
    PATH=/usr/apps/mpich/1.2.4/bin:$PATH
    PATH=$PATH:/usr/apps/bin:/home/casc/bin
    ;;
  *)
    ;;
esac
export PATH
# over ride default g++ compiler for mpiCC
MPICH_CCLINKER=CC
MPICH_CCC=CC
export MPICH_CCLINKER MPICH_CCC
