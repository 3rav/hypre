DRIVER_ARGS=""
POE_NUM_PROCS="1"
while [ "$*" != "" ]
do
case $1 in
    -np)
	POE_NUM_PROCS=$2
	shift
        shift;;
    *)
        DRIVER_ARGS="$DRIVER_ARGS $1"
        shift;;
esac
done

poe $DRIVER_ARGS -procs $POE_NUM_PROCS

