.SUFFIXES:
.SUFFIXES: .c .f .o

srcdir = @srcdir@
VPATH = @srcdir@
 
CC = @CC@
 
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
COPT= @COPT@
CDEBUG = @CDEBUG@
CDEFS = @HYPREDEFS@ -DHYPRE_TIMING
 
CFLAGS =\
 -I../utilities\
 -I../seq_matrix_vector\
 -I../parcsr_matrix_vector\
 ${CINCLUDES}\
 ${COPT}\
 ${CDEBUG}\
 ${CDEFS}
 
RANLIB= @RANLIB@
 
MPILIBFLAGS = @MPILIBDIRS@ @MPILIBS@ @MPIFLAGS@
LIBFLAGS = @LIBDIRS@ @LIBS@
LDLIBFLAGS = @LDLIBDIRS@ @LDLIBS@
 
LFLAGS =\
 -L.\
 -L../parcsr_matrix_vector\
 -L../seq_matrix_vector\
 -L../utilities\
 -lHYPRE_parcsr_ls\
 -lHYPRE_parcsr_mv\
 -lHYPRE_mv\
 -lHYPRE_utilities\
 ${MPILIBFLAGS} ${LIBFLAGS} ${LDLIBFLAGS}
 
HEADERS =\
 headers.h\
 par_amg.h\
 parcsr_linear_solvers.h\
 HYPRE_parcsr_ls.h

FILES =\
 driver.c\
 par_amg.c\
 par_amg_setup.c\
 par_amg_solve.c\
 par_stats.c\
 par_cycle.c\
 par_interp.c\
 par_coarsen.c\
 par_relax.c\
 par_indepset.c\
 par_laplace.c\
 par_laplace_9pt.c\
 par_rap.c\
 par_rap_communication.c\
 pcg.c\
 pcg_par.c\
 transpose.c\
 HYPRE_parcsr_amg.c\
 HYPRE_parcsr_pcg.c

OBJS = ${FILES:.c=.o}

##################################################################
# Targets
##################################################################

all: libHYPRE_parcsr_ls.a driver
 
install: all
 
clean:
	@rm -f *.o

veryclean: clean
	@rm -f driver driver_interp driver_rap
	@rm -f libHYPRE_parcsr_ls.a

##################################################################
# Rules
##################################################################

driver: driver.o libHYPRE_parcsr_ls.a
	@echo  "Linking" $@ "... "
	${CC} -o driver driver.o ${LFLAGS} 

driver_interp: driver_interp.o libHYPRE_parcsr_ls.a
	@echo  "Linking" $@ "... "
	${CC} -o driver_interp driver_interp.o ${LFLAGS} 

driver_rap: driver_rap.o libHYPRE_parcsr_ls.a
	@echo  "Linking" $@ "... "
	${CC} -o driver_rap driver_rap.o ${LFLAGS} 

libHYPRE_parcsr_ls.a: ${OBJS}
	@echo  "Building $@ ... "
	ar -ru $@ ${OBJS}
	ranlib $@
 
${OBJS}: ${HEADERS}
 
##################################################################
# Generic rules
##################################################################

.c.o:
	${CC} -o $@ -c ${CFLAGS} $<

