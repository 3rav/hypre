.SUFFIXES:
.SUFFIXES: .dxx .html .tex

srcdir = @srcdir@
VPATH = @srcdir@

##################################################################
# Targets
##################################################################

all: html ps

install: all

clean:
	@rm -f users_manual.dvi
	@rm -f developers_manual.dvi

veryclean: clean
	@rm -fr users_manual
	@rm -f users_manual.tex
	@rm -f users_manual.ps
	@rm -fr developers_manual
	@rm -f developers_manual.tex
	@rm -f developers_manual.ps

##################################################################
# Rules
##################################################################

html: users_html developers_html

ps: users_ps developers_ps

##########

users: users_html users_ps

users_html:
	doc++ -d users_manual users_manual.dxx

users_ps: users_tex
	latex users_manual
	latex users_manual
	dvips -o users_manual.ps users_manual

users_tex:
	doc++ -t -o users_manual.tex users_manual.dxx

##########

developers: developers_html developers_ps

developers_html:
	doc++ -d developers_manual developers_manual.dxx

developers_ps: developers_tex
	latex developers_manual
	latex developers_manual
	dvips -o developers_manual.ps developers_manual

developers_tex:
	doc++ -t -o developers_manual.tex developers_manual.dxx

##################################################################
# Generic rules
##################################################################

