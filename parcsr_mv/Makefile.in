.SUFFIXES:
.SUFFIXES: .c .f .o

srcdir = @srcdir@
VPATH = @srcdir@
 
CC = @CC@
 
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
COPT= @COPT@
CDEBUG = @CDEBUG@
CDEFS = @HYPREDEFS@ -DHYPRE_TIMING
 
CFLAGS = \
 -I../utilities\
 -I../seq_matrix_vector\
 ${CINCLUDES}\
 ${COPT}\
 ${CDEBUG}\
 ${CDEFS}
 
RANLIB = @RANLIB@
 
MPILIBFLAGS = @MPILIBDIRS@ @MPILIBS@ @MPIFLAGS@ 
LIBFLAGS = @LIBDIRS@ @LIBS@
LDLIBFLAGS = @LDLIBDIRS@ @LDLIBS@
 
LFLAGS =\
 -L.\
 -L../seq_matrix_vector\
 -L../utilities\
 -lHYPRE_parcsr_mv\
 -lHYPRE_mv\
 -lHYPRE_utilities\
 -lmpe\
 ${MPILIBFLAGS} ${LIBFLAGS} ${LDLIBFLAGS}
 

HEADERS =\
 communication.h\
 headers.h\
 par_csr_matrix.h\
 par_vector.h\
 hypre_parcsr_mv.h\
 HYPRE_parcsr_mv.h

FILES =\
 driver.c\
 driver_matmul.c\
 driver_matvec.c\
 communication.c\
 par_csr_matop.c\
 par_csr_matrix.c\
 par_csr_matvec.c\
 par_vector.c\
 HYPRE_parcsr_matrix.c\
 HYPRE_parcsr_vector.c

OBJS = ${FILES:.c=.o}

##################################################################
# Targets
##################################################################

all: libHYPRE_parcsr_mv.a
 
install: all
 
clean:
	@rm -f *.o

veryclean: clean
	@rm -f driver driver_matvec driver_matmul
	@rm -f libHYPRE_parcsr_mv.a

##################################################################
# Rules
##################################################################

driver: driver.o libHYPRE_parcsr_mv.a 
	@echo  "Linking" $@ "... "
	${CC} -o driver driver.o ${LFLAGS} 

driver_matvec: driver_matvec.o libHYPRE_parcsr_mv.a
	@echo  "Linking" $@ "... "
	${CC} -o driver_matvec driver_matvec.o ${LFLAGS} 

driver_matmul: driver_matmul.o libHYPRE_parcsr_mv.a
	@echo  "Linking" $@ "... "
	${CC} -o driver_matmul driver_matmul.o ${LFLAGS} 

libHYPRE_parcsr_mv.a: ${OBJS}
	@echo  "Building $@ ... "
	ar -ru $@ ${OBJS}
	ranlib $@

${OBJS}: ${HEADERS}

##################################################################
# Generic rules
##################################################################

.c.o:
	@echo "Making (c) " $@
	@${CC} -o $@ -c ${CFLAGS} $<

