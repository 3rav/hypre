include ../config/Makefile.config

CC = @CC@

C_COMPILE_FLAGS=@CFLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
 
CFLAGS =\
 ${C_COMPILE_FLAGS}\
 -I..\
 -I$(srcdir)/..\
 -I$(srcdir)/../utilities\
 ${CINCLUDES}

HEADERS =\
 all_krylov.h\
 bicgstab.h\
 cgnr.h\
 gmres.h\
 krylov.h\
 pcg.h

FILES =\
 bicgstab.c\
 cgnr.c\
 gmres.c\
 HYPRE_bicgstab.c\
 HYPRE_cgnr.c\
 HYPRE_gmres.c\
 HYPRE_pcg.c\
 pcg.c

OBJS = ${FILES:.c=.o}

##################################################################
# Targets
##################################################################

all: libHYPRE_krylov.a 

install: all
	@cp -f $(srcdir)/krylov.h $$HYPRE_INSTALL_DIR/include/.
	@cp -f lib*.a $$HYPRE_INSTALL_DIR/lib/.
clean:
	@rm -f *.o

veryclean: clean
	@rm -f lib*.a Makefile


##################################################################
# Rules
##################################################################

libHYPRE_krylov.a: ${OBJS}
	@echo  "Building $@ ... "
	ar -rcu $@ ${OBJS}
	${RANLIB} $@

${OBJS}: ${HEADERS}
