##################################################################
# Targets
##################################################################

all:
	@\
	for dir in ${HYPRE_SRC_DIRS}; \
	do \
	   for file in ../$$dir/*.o; \
	   do \
	      (cp -fp $$file .); \
	   done; \
	done

install: all libHYPRE.a libHYPRE_LSI.a
	@cp -fp libHYPRE* ../hypre/lib

clean:
	@rm -f *.o 

veryclean: clean
	@rm -f lib*.a Makefile


##################################################################
# Rules
##################################################################

libHYPRE.a: ${FILES}
	@echo  "Building $@ ... "
	ar -rcu $@ ${FILES}
	${RANLIB} $@

libHYPRE_LSI.a: ${FILES_LSI}
	@echo  "Building $@ ... "
	ar -rcu $@ ${FILES_LSI}
	${RANLIB} $@
