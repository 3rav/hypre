.SUFFIXES:
.SUFFIXES: .c .f .o

srcdir = @srcdir@
VPATH = @srcdir@
 
 
CC = @CC@
 
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
COPT= @COPT@
CDEBUG = @CDEBUG@
CDEFS = @HYPREDEFS@ -DHYPRE_TIMING
 
CFLAGS =\
 -I../utilities\
 ${CINCLUDES}\
 ${COPT}\
 ${CDEBUG}\
 ${CDEFS}
 
RANLIB= @RANLIB@
 
LIBFLAGS = @LIBDIRS@ @LIBS@
LDLIBFLAGS = @LDLIBDIRS@ @LDLIBS@
 
LFLAGS =\
 -L.\
 -L../utilities\
 -lHYPRE_mv\
 -lHYPRE_utilities\
 ${LIBFLAGS} ${LDLIBFLAGS}


HEADERS =\
 HYPRE_mv.h\
 csr_matrix.h\
 headers.h\
 mapped_matrix.h\
 multiblock_matrix.h\
 protos.h\
 vector.h

FILES =\
 HYPRE_csr_matrix.c\
 HYPRE_mapped_matrix.c\
 HYPRE_multiblock_matrix.c\
 csr_matop.c\
 csr_matrix.c\
 csr_matvec.c\
 mapped_matrix.c\
 multiblock_matrix.c\
 vector.c

OBJS = ${FILES:.c=.o}

##################################################################
# Targets
##################################################################
 
all: libHYPRE_mv.a
 
install: all
	@cp -f HYPRE_*.h hypre_*.h $$HYPRE_INSTALL_DIR/include
	@cp -f libHYPRE_*.a $$HYPRE_INSTALL_DIR/lib
 
clean:
	@rm -f *.o
 
veryclean: clean
	@rm -f libHYPRE_mv.a
 

##################################################################
# Main rules
##################################################################

libHYPRE_mv.a: ${OBJS}
	@echo  "Building $@ ... "
	ar -ru $@ ${OBJS}
	${RANLIB} $@

${OBJS}: ${HEADERS}

##################################################################
# Generic rules
##################################################################

.c.o:
	@echo "Making (c) " $@
	@${CC} -o $@ -c ${CFLAGS} $<

.f.${AMG_ARCH}.o:
	@echo "Making (f) " $@
	@${F77} -o $@ -c ${FFLAGS} $<

