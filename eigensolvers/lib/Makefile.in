include ../../config/Makefile.config

CC = @CC@

C_COMPILE_FLAGS=@CFLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
 
CFLAGS =\
 ${C_COMPILE_FLAGS}\
 -I..\
 -I$(srcdir)/..\
 -I$(srcdir)/../..\
 -I$(srcdir)/../krylov\
 -I$(srcdir)/../multivector\
 -I$(srcdir)/../parcsr_ls\
 -I$(srcdir)/../struct_ls\
 -I$(srcdir)/../sstruct_ls\
 -I$(srcdir)/../utilities\
 -I$(srcdir)/../../utilities\
 -I$(srcdir)/../../IJ_mv\
 -I$(srcdir)/../../krylov\
 -I$(srcdir)/../../parcsr_mv\
 -I$(srcdir)/../../parcsr_ls\
 -I$(srcdir)/../../seq_mv\
 -I$(srcdir)/../../distributed_matrix\
 -I$(srcdir)/../../distributed_ls\
 -I$(srcdir)/../../FEI_mv/femli\
 -I$(srcdir)/../../blas\
 -I$(srcdir)/../../lapack\
 -I$(srcdir)/../../distributed_ls/Euclid/include\
 -I$(srcdir)/../../matrix_matrix\
 -I$(srcdir)/../../struct_ls\
 -I$(srcdir)/../../struct_mv\
 -I$(srcdir)/../../sstruct_ls\
 -I$(srcdir)/../../sstruct_mv\
 ${CINCLUDES}

HEADERS =\
 HYPRE_interpreter.h\
 HYPRE_lobpcg.h\
 lobpcg.h\
 multivector.h\
 HYPRE_parcsr_int.h\
 HYPRE_sstruct_int.h\
 HYPRE_struct_int.h\
 fortran_matrix.h\
 fortran.h

FILES =\
 HYPRE_lobpcg.c\
 lobpcg.c\
 multivector.c\
 temp_multivector.c\
 HYPRE_parcsr_int.c\
 HYPRE_sstruct_int.c\
 HYPRE_struct_int.c\
 fortran_matrix.c

OBJS = ${FILES:.c=.o}

##################################################################
# Targets
##################################################################

all: libHYPRE_lobpcg.a 

install: all
	@cp -f *.h $$HYPRE_INSTALL_DIR/include/.
	@cp -f lib*.a $$HYPRE_INSTALL_DIR/lib/.
clean:
	@rm -f *.o *.h *.c

veryclean: clean
	@rm -f lib*.a

##################################################################
# Rules
##################################################################

libHYPRE_lobpcg.a: ${OBJS}
	@echo  "Building $@ ... "
	ar -rcu $@ ${OBJS}
	${RANLIB} $@

${OBJS}: ${HEADERS}
